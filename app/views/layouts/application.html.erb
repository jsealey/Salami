  <%= csrf_meta_tags %>
</head>
<body>
	<!-- Navigation -->
	<div class="fixed contain-to-grid">
	<nav class="top-bar">
    <ul>
      <li class="name"><h1><%=link_to "Chico Process", root_path() %></h1></li>
      <li class="toggle-topbar"><a href="#"></a></li>
    </ul>
 
    <section>
      <ul class="left">
        <%= nav_link "Home", root_path %>
        <%= nav_link "Old Website", home_oldwebsite_path %>
      </ul>
      <% if user_signed_in? %>
      <ul class="right">
        
        <li class="has-dropdown">
          <%= link_to "Profile", edit_user_registration_path %>
 
          <ul class="dropdown">
            <%= nav_link 'Edit', edit_user_registration_path %>
