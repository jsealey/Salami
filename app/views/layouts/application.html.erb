   	    <% if notice %>
      <div class="alert-box success">
        <%= notice %>
        <a href="" class="close">&times;</a>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert-box alert">
        <%= alert %>
        <a href="" class="close">&times;</a>
      </div>
    <% end %>
    <div class="twelve columns">
      <br />
      <%= yield %>

      <!-- Footer -->
      <footer class="row">
        <div class="twelve columns"><hr />
            <div class="row">
 
              <div class="six columns">
                  <p>&copy; CSU Chico</p>
              </div> 
            </div>
        </div>
      </footer>
      <!-- End Footer -->

      </div>
    </div>
  </body>
</html>